import streamlit as st  # type: ignore
import pydoc

st.set_page_config(page_title="Python Help Bot", page_icon="ğŸ")
st.title("ğŸ Python Programming Help Bot (Offline)")
st.markdown("Ask anything about Python programming and get instant help using Pythonâ€™s built-in documentation.")

question = st.text_input("ğŸ’¬ Ask your Python question here (e.g., 'list', 'str.upper', 'len')")

if st.button("ğŸ“š Get Answer"):
    if not question.strip():
        st.warning("Please enter a Python topic or function name.")
    else:
        try:
            result = pydoc.render_doc(question, "Help on %s")
            st.success(f"ğŸ“˜ Documentation for `{question}`:")
            st.text(result[:3000])  
        except Exception as e:
            st.error("âš ï¸ Sorry, I couldn't find any documentation for that.")
            st.code(str(e))
